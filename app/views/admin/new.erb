<% @page_title = 'Create new admin' %>

<div class="login">
  <%= form_tag(:action => 'new') do %>
      <table>
        <tr>
          <td><%= label_tag(:name) %></td>
          <td><%= text_field_tag(:name) %></td>
        </tr>
        <tr>
          <td><%= label_tag(:password) %></td>
          <td><%= password_field_tag(:password) %></td>
        </tr>
        <tr>
          <td>&nbsp;</td>
          <td><%= submit_tag('Create') %></td>
        </tr>
      </table>
  <% end %>
</div>