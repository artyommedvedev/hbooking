<%= form_for(@booking) do |f| %>
<% @page_title = "Welcome" %>
<h2> Welcome to room booking system</h2>

    <h3> Set date frames: </h3>
    <p> From:<%= f.date_select(:begining, order: [:day, :month, :year]) %></p>
    <p> Until:<%=f.date_select(:ending, order: [:day, :month, :year]) %></p>

    <%=render 'available' %>

    <div class="field">
      <%= f.label :number %><br>
      <%= f.number_field :number %>
    </div>

    <div class="field">
      <%= f.label :cost %><br>
      <%= f.number_field :cost %>
    </div>
    <%=f.submit %>
<% end %>
