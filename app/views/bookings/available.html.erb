<%= form_for(@bookings) do |f| %>
    <h2> Welcome to room booking system</h2>

    <h3>Select one of this rooms:</h3>
    <table>
      <thead>
      <tr>
        <th>Number</th>
        <th>Type</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @rooms.each do |f| %>
          <tr>
            <td><%= f.number %></td>
            <td><%= @rtypes[f.type_id-1].type_name %></td>
            <td><%= f.price %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <div class="field">
      <%= f.label :begining %><br>
      <%= f.date_select :begining, default: @ds %>
    </div>
    <div class="field">
      <%= f.label :ending %><br>
      <%= f.date_select :ending, default: @de %>
    </div>

    <div class="field">
      <%= f.label :number %><br>
      <%= f.number_field :number %>
    </div>

    <div class="field">
      <%= f.label :cost %><br>
      <%= f.number_field :cost %>
    </div>
    <%=f.submit %>
<% end %>